@{
    ViewBag.Title = "login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="top-content">
    <div class="inner-bg">
        <div class="container">
            <div class="row"  style="font-size:20px;color:black;text-align:center">
                <div class="col-sm-6 col-sm-offset-3 form-box">
                    <div class="form-top">
                        <div class="form-top-left">
                            <h3> ĐĂNG NHẬP VÀO HỆ THỐNG QUẢN TRỊ</h3>
                            <p>Vui lòng nhập User Name và Password</p>
                            <h4 style="color:red;text-align:center">@ViewBag.Thongbao</h4>
                        </div>
                        <div class="form-top-right">
                            <i class="fa fa-key"></i>
                        </div>
                    </div>
                    <div class="form-bottom">
                        @using (Html.BeginForm())
                        {
                            @Html.ValidationSummary(true)
                            <div class="form-group">
                                <label class="sr-only" for="form-username">User Name: </label>
                                <input type="text" name="username" placeholder="Tên đăng nhập" @ViewData["Loi1"] /> 
                            </div>
                            <div class="form-group">
                                <label class="sr-only" for="form-username">Pass Word: </label>
                                <input type="text" name="password" placeholder="Mật khẩu"/ @ViewData["Loi2"]> 
                            </div>
                            <input type="submit" class="btn" value="Đăng nhập">
                            @ViewBag.Thongbao
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

