
@{
    ViewBag.Title = "TheLoaiTranh";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

@model WebBanTranh.Models.TRANH
<h2 style="text-align:center;color:blue">THÔNG TIN CHI TIẾT TRANH</h2>

<div class=" container">
    <div class="row">
        <div class="col-lg-4">
            <img alt="@Model.TENTRANH" src="~/Content/Anh/@Model.ANHBIA" width="280"/>
        </div>
        <div class="col-lg-8">
            <div class="row">
                <div class="col-lg-11">
                    <div class="row" >
                        <h2 style="color: red">Tên Tranh: @Model.TENTRANH</h2>
                    </div>
                    <div class="row" style="margin-top:auto">
                        <h3>Mô Tả:  @Model.MOTA</h3>
                    </div>
                    <div class="row" style="margin-top:auto">
                        <h3>Bảo Hành:  @Model.BAOHANH</h3>
                    </div>
                    <div class="row">
                        <h2 style="color: red">Giá: @Model.GIABAN đ</h2>
                    </div>
                    <div class="row">
                        <h2 style="color: red">Tình trạng: @Model.TINHTRANG</h2>
                    </div>
                </div>
            </div>
            @Html.ActionLink("Trở về","Tranh")
    </div>
</div>

