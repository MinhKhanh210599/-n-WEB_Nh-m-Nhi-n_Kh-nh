@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table align="center" style="font-size:18px">
    <h2 style="text-align:center"><p style="color:red;font-size:30px;">ĐĂNG KÝ THÀNH VIÊN</p></h2>
    @using (Html.BeginForm())
    { 
        @Html.ValidationSummary(true)
        
        <tr style="height:40px">
            <td>Tên khách hàng: </td>
            <td>@Html.TextBox("HOTEN")
                @ViewData["Loi2"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Ngày sinh: </td>
                @ViewData["Loi3"]
                <td>
                <input type="date" name="Ngaysinh" />
            </td>
        </tr>
        <tr style="height:40px">
            <td>Giới tính: </td>
            <td>@Html.TextBox("GIOITINH")
                @ViewData["Loi4"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Điện thoại: </td>
            <td>@Html.TextBox("Dienthoai")
                @ViewData["Loi5"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Tài khoản: </td>
            <td>@Html.TextBox("TAIKHOAN")
                @ViewData["Loi6"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Mật khẩu: </td>
            <td>@Html.Password("MATKHAU")
                @ViewData["Loi7"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Email: </td>
            <td>@Html.TextBox("EMAIL")
                @ViewData["Loi8"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Địa chỉ: </td>
            <td>@Html.TextBox("DIACHI")
                @ViewData["Loi9"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>
          
            </td>
            <td>
                <input type="submit" value="ĐĂNG KÝ" />
            </td>
        </tr>
    }
     </table>

